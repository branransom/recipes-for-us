{
    "name": "recipes-for-us",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "webpack -p && npm run docs",
        "build:dev": "webpack --mode development --watch &",
        "start": "rimraf dist && npm run build && node server/index.js",
        "dev": "rimraf dist && npm run build && nodemon server/index.js --ignore './src/'",
        "docs": "redoc-cli bundle ./spec/api-spec.yml --output ./docs/index.html --title=\"Recipe API\"",
        "docs:reload": "live-server --open=/docs --watch=./docs",
        "docs:watch": "watch \"npm run docs\" ./spec",
        "docs:hot-reload": "concurrently \"npm run docs:reload\" \"npm run docs:watch\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run docs"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@koa/cors": "^3.0.0",
        "@koa/router": "^8.0.2",
        "axios": "^0.19.0",
        "koa": "^2.10.0",
        "koa-bodyparser": "^4.2.1",
        "koa-static": "^5.0.0",
        "lodash": "^4.17.15",
        "mongoose": "^5.7.7"
    },
    "devDependencies": {
        "@babel/core": "^7.7.2",
        "@babel/plugin-proposal-class-properties": "^7.7.0",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-react": "^7.7.0",
        "babel-loader": "^8.0.6",
        "concurrently": "^5.0.0",
        "css-loader": "^3.2.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "formik": "^2.0.4",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.1.0",
        "live-server": "^1.2.1",
        "nodemon": "^1.19.4",
        "prettier": "^1.19.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-router-dom": "^5.1.2",
        "redoc-cli": "^0.9.2",
        "rimraf": "^3.0.0",
        "style-loader": "^1.0.0",
        "watch": "^1.0.2",
        "webpack": "^4.41.2",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0"
    }
}
